<div class="container" style="background:white;padding:50px">
<h1 style="color:red;font-weight:bold">Sign Up</h1>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :name, required: true, autofocus: true %><br>
    <%= f.input :email, required: true, autofocus: true %><br>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %><br>
    <%= f.input :password_confirmation, required: true %><br>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
