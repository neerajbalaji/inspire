<div class="container" style="background:white;padding:50px">
<h1 style="color:red;font-weight:bold">Sign In</h1>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %><br>
    <%= f.input :password, required: false %><br>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %><br>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
